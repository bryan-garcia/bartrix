{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": ". ${env:IDF_PATH}/export.sh && idf.py build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "flash",
			"type": "shell",
			"command": ". ${env:IDF_PATH}/export.sh && idf.py flash",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "monitor",
			"type": "shell",
			"command": ". ${env:IDF_PATH}/export.sh && idf.py monitor",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": ". ${env:IDF_PATH}/export.sh && idf.py fullclean",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "build and flash and monitor",
			"type": "shell",
			"command": ". ${env:IDF_PATH}/export.sh && idf.py build flash monitor",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}